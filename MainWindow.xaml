<Window x:Class="_185338Hangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_185338Hangman"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas x:Name="myCanvas">
        <TextBox x:Name="txtInput" Background="Gray" FontSize="20" MaxLength="1" Width="137" Canvas.Left="10" Canvas.Top="10"/>
        <TextBlock x:Name="txbWord" Text="" Background="Gray" FontSize="20" Canvas.Left="10" Canvas.Top="99" Width="137"/>
        <Button x:Name="btnClick" Content="Check letter" Click="btnClick_Click" Background="Gray" Height="50" FontSize="20" Canvas.Top="44" Canvas.Left="10" Width="137"/>
        <Label x:Name="lblLetters" Content="Letter's Used:" FontSize="20" Background="Gray" Canvas.Top="131" Canvas.Left="10" Width="137"/>
        <Label x:Name="lblLives" Content="" Background="Gray" FontSize="20" Canvas.Top="175" Width="137" Canvas.Left="10"/>

    </Canvas>
</Window>
